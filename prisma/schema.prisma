generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id                      String             @id @default(cuid())
  name                    String
  slug                    String             @unique
  category                EyewearCategory
  type                    String?
  description             String
  price                   Decimal            @db.Decimal(10, 2)
  originPrice             Decimal            @db.Decimal(10, 2)
  brand                   String?
  images                  String[]
  thumbImages             String[]
  rate                    Int                @default(0)
  sold                    Int                @default(0)
  quantity                Int                @default(0)
  isNew                   Boolean            @default(false)
  isSale                  Boolean            @default(false)
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt
  descriptionTranslations Json?
  nameTranslations        Json?
  orderItems              OrderItem[]
  attributes              ProductAttribute?
  sizes                   ProductSize[]
  variations              ProductVariation[]
}

model ProductVariation {
  id         String  @id @default(cuid())
  productId  String
  color      String
  colorCode  String?
  colorImage String?
  image      String
  product    Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductAttribute {
  id            String   @id @default(cuid())
  productId     String   @unique
  lensType      String?
  frameMaterial String?
  frameSize     Json?
  lensCoating   String[]
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductSize {
  id        String  @id @default(cuid())
  productId String
  size      String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  status          OrderStatus @default(PENDING)
  totalAmount     Decimal     @db.Decimal(10, 2)
  shippingAddress Json
  promotionId     String?
  discountAmount  Decimal?    @db.Decimal(10, 2)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  promotion       Promotion?  @relation(fields: [promotionId], references: [id])
  user            User?       @relation(fields: [userId], references: [id])
  items           OrderItem[]
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  quantity      Int
  price         Decimal @db.Decimal(10, 2)
  selectedSize  String?
  selectedColor String?
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product @relation(fields: [productId], references: [id])
}

model Promotion {
  id              String    @id @default(cuid())
  code            String    @unique
  discountPercent Int
  minOrder        Decimal   @db.Decimal(10, 2)
  isActive        Boolean   @default(true)
  validFrom       DateTime?
  validUntil      DateTime?
  usageLimit      Int?
  usedCount       Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  orders          Order[]
}

model Blog {
  id                      String    @id @default(cuid())
  title                   String
  slug                    String    @unique
  category                String
  tag                     String?
  author                  String
  avatar                  String?
  thumbImg                String?
  coverImg                String?
  subImg                  String[]
  shortDesc               String
  description             String
  date                    String
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  descriptionTranslations Json?
  shortDescTranslations   Json?
  titleTranslations       Json?
  tags                    BlogTag[]
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  blogs     BlogTag[]
}

model BlogTag {
  id        String   @id @default(cuid())
  blogId    String
  tagId     String
  createdAt DateTime @default(now())
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([blogId, tagId])
  @@index([blogId])
  @@index([tagId])
}

model Testimonial {
  id                      String   @id @default(cuid())
  name                    String
  title                   String
  description             String
  avatar                  String?
  images                  String[]
  star                    Int
  date                    String
  address                 String?
  category                String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  descriptionTranslations Json?
  titleTranslations       Json?
}

model StoreLocation {
  id            String   @id @default(cuid())
  name          String
  address       String
  phone         String
  email         String?
  hoursWeekdays String
  hoursSaturday String
  hoursSunday   String
  mapUrl        String
  latitude      Decimal  @db.Decimal(10, 8)
  longitude     Decimal  @db.Decimal(11, 8)
  isActive      Boolean  @default(true)
  displayOrder  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  imageUrl      String?
  province      String

  @@index([isActive])
  @@index([displayOrder])
  @@index([province])
}

model HeroSlide {
  id                   String   @id @default(cuid())
  subtitle             String
  title                String
  imageUrl             String
  ctaText              String?  @default("Shop Now")
  ctaLink              String?  @default("/shop/breadcrumb-img")
  isActive             Boolean  @default(true)
  displayOrder         Int      @default(0)
  imageWidth           String?
  imagePosition        String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  ctaTextTranslations  Json?
  subtitleTranslations Json?
  titleTranslations    Json?

  @@index([isActive])
  @@index([displayOrder])
}

model PromotionalPage {
  id                      String   @id @default(cuid())
  title                   String
  titleTranslations       Json?
  description             String
  descriptionTranslations Json?
  imageUrl                String
  isActive                Boolean  @default(true)
  displayOrder            Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([isActive])
  @@index([displayOrder])
}

enum Role {
  CUSTOMER
  ADMIN
}

enum EyewearCategory {
  sunglasses
  prescription_glasses
  reading_glasses
  contact_lenses
  frames_only
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
